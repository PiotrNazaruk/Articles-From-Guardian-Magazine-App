body
  background white
  font-family: 'Lato', sans-serif;
  @media(min-width: 1024px)
    width 1320px
    margin 0 auto
placeholder()
	&::-webkit-input-placeholder
		{block}
	&:-moz-placeholder
		{block}
	&::-moz-placeholder
		{block}
	&:-ms-input-placeholder
		{block}
*
    margin 0px
    padding 0px
    box-sizing border-box
    text-decoration none

img
  max-width 100%
  height 100%

.header 
  width 100%
  height 62px
  background #323031
  h1
    color white
    padding 10px 
.search
  width 344.5px
  height 60px
  margin 20px auto
  display flex
  flex-direction column
  @media(min-width: 1024px)
    width 873px
    height 88.64px
    margin 20px 0
   
  .search__label
    height 50%
    width 100%
    color #707070
    @media(min-width: 1024px)
      font-size 1.5rem
    
  .search__input
     height 50%
     border 1px solid #707070
     @media(min-width: 1024px)
       +placeholder()
        font-size 1.2rem
        padding-left 10px 
     

    
   
.articles
  width 345.5px
  margin 0 auto
  height 98vh
  overflow: hidden
  @media(min-width: 1024px)
    width 100%
    height 90vh
  .articles__headline
    width 100%
    height 29.5px
    border-bottom 1px solid #707070
    color #323031
    @media(min-width: 1024px)
      display none
.news
  @media(min-width: 1024px)
    width 100%
    display flex
    flex-wrap wrap
    justify-content space-between
.article
  width 344.5px
  height 244px
  position relative
  border .5px solid #707070
  margin-top 10px
  @media(min-width: 1024px)
    width 430px
    height 471px
  .article__title
    padding 60px 10px
    font-size 1.3rem
    color #323031
    @media(min-width: 1024px)
      font-size 2.5rem
.article__category
  position absolute
  top  10px
  left 10px
  color #707070
  @media(min-width: 1024px)
      font-size 1.5rem
    
.article__publication-date
  position absolute
  top 10px
  right 10px
  @media(min-width: 1024px)
      font-size 1.5rem
     
  
.article__button
  width 100px
  height 28px
  position absolute
  background #ED2024
  bottom 5px 
  right 5px
  color white  
  display flex
  justify-content center
  align-items center
  @media(min-width: 1024px)
    width 153px
    height 48.59px
    font-size 1.5rem
    bottom 20px
    

.select-input
  height 60px
  width 344.5px
  margin 20px auto
  display flex
  flex-direction column
  @media(min-width: 1024px)
    width 354px
    height 77px
    margin 20px 0
    float right
  .select__label
    height 50%
    font-size 1.2rem
    @media(min-width: 1024px)
      font-size 1.5rem  
  
.select__option
  height 50%
  @media(min-width: 1024px)
    +placeholder()
      font-size 1.5rem      
      